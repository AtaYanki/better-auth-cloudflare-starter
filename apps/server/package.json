{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "wrangler dev --port 3000",
    "start": "wrangler dev",
    "deploy": "wrangler deploy --env production",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings"
  },
  "dependencies": {
    "hono": "catalog:",
    "@trpc/server": "catalog:",
    "@hono/trpc-server": "^0.4.0",
    "better-auth": "catalog:",
    "dotenv": "catalog:",
    "zod": "catalog:",
    "@my-better-t-appp/api": "workspace:*",
    "@my-better-t-appp/auth": "workspace:*",
    "@my-better-t-appp/db": "workspace:*"
  },
  "devDependencies": {
    "typescript": "catalog:",
    "tsdown": "^0.16.5",
    "@my-better-t-appp/config": "workspace:*",
    "wrangler": "^4.54.0",
    "@types/node": "catalog:"
  }
}
